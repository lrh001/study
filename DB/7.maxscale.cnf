[maxscale]　定义开启的线程数
threads=auto


[server1]
type=server
address=192.168.4.51
port=3306
protocol=MySQLBackend

[server2]
type=server
address=192.168.4.52
port=3306
protocol=MySQLBackend


[MySQL Monitor] ##定义监控的数据库服务器
type=monitor
module=mysqlmon
servers=server1,server2　＃＃监控server1和server2
user=maxmon　　　　＃＃链接数据库的用户　
passwd=123456　　　＃＃连接数据库的密码
monitor_interval=10000



